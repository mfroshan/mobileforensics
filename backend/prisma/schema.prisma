generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Scan {
  id           String   @id @default(uuid())
  filename     String
  uploadedAt   DateTime @default(now())
  yaraMatches  String?
  regexMatches String?
  mlScore      Float?
  riskLevel    String
  reportUrl    String?
  sqliteScan   String?  // added sqliteScan column
  aleappScan   String?  // New field for ALEAPP scan JSON output
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}
